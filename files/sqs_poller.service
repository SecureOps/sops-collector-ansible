[Unit]
Description=Python script that polls an SQS queue for commands
[Service]
Environment=PYTHONUNBUFFERED=1
User=ansible_poller
Group=ansible_poller
Restart=on-failure
RestartSec=5s
StartLimitBurst=0
WorkingDirectory=/home/ansible_poller
ExecStart=/bin/sh -c '/usr/bin/python3 /home/ansible_poller/sqs_poller.py'
KillMode=process
[Install]
WantedBy=multi-user.target
